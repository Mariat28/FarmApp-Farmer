<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Productdetails">

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/productlayout"
        android:layout_width="match_parent"
        android:layout_height="50dp">

        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="10dp"
            android:hint="@string/enter_product_name"
            android:textSize="18sp" />
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/desclayout"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@+id/productlayout">

        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="10dp"
            android:hint="@string/productdesc"
            android:textSize="18sp" />

    </com.google.android.material.textfield.TextInputLayout>

    <TextView
        android:id="@+id/add"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/desclayout"
        android:layout_marginStart="90dp"
        android:text="@string/click_to_add_a_product_image"
        android:textColor="@color/black"
        android:textSize="16sp" />

    <ImageView
        android:id="@+id/addpicture"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_below="@+id/add"
        android:layout_marginStart="90dp"
        android:src="@drawable/ic_add_gray" />

    <Button
        android:id="@+id/upload"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/addpicture"
        android:background="@drawable/login_button"
        android:text="Upload"
        android:textColor="@color/white" />
</RelativeLayout>