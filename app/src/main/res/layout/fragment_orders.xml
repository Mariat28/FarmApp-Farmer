<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".agromarket.fragments.Orders">

    <ProgressBar
        android:id="@+id/orderprogress"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true" />

    <ImageView
        android:id="@+id/noordersimage"
        android:layout_width="wrap_content"
        android:layout_height="400dp"
        android:layout_margin="50dp"
        android:contentDescription="@string/icon"
        android:src="@drawable/ic_no_orders"
        android:visibility="invisible" />

    <TextView
        android:id="@+id/noorderstext"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/noordersimage"
        android:layout_margin="10dp"
        android:gravity="center"
        android:text="@string/no_orders_have_been_placed_today_you_will_be_notified_incase_new_orders_arrive"
        android:visibility="invisible" />


    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/ordersrecyclerview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

</RelativeLayout>